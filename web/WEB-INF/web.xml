<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>PessoasServlet</servlet-name>
        <servlet-class>com.dividircustos.servlets.PessoasServlet</servlet-class>
        <init-param>
            <param-name>TituloJanela</param-name>
            <param-value>Dividir Custos</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ItensServlet</servlet-name>
        <servlet-class>com.dividircustos.servlets.ItensServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RateioServlet</servlet-name>
        <servlet-class>com.dividircustos.servlets.RateioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PessoasServlet</servlet-name>
        <url-pattern>/pessoas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItensServlet</servlet-name>
        <url-pattern>/itens</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RateioServlet</servlet-name>
        <url-pattern>/rateio</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
